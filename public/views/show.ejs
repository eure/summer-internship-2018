<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>GitHubClient</title>
    <link href="../../bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>

  <body>
  	  	<nav class="navbar navbar-expand-md navbar-dark bg-dark">
	    <div class="navbar-collapse collapse w-100 order-1 order-md-0 dual-collapse2">
	        <ul class="navbar-nav mr-auto">
	            <li class="nav-item active">
	            </li>
	        </ul>
	    </div>
	    <div class="mx-auto order-0">
	        <a class="navbar-brand mx-auto" href="/github">GitHubClient by Rentaro Igari</a>
	        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".dual-collapse2">
	            <span class="navbar-toggler-icon"></span>
	        </button>
	    </div>
	    <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
	        <ul class="navbar-nav ml-auto">
	            <li class="nav-item"></li>
	        </ul>
	    </div>
	</nav>

	<h1 class="text-center mt-5 show-h1"><%= title %></h1>
	<h2 class="text-center mb-5 show-h2">by <%= author %></h2>
	<div class="row">
	  <canvas id="myChart" height="100vh"></canvas>
	</div>

  </body>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
  <script src="../../bower_components/bootstrap/dist/js/bootstrap.bundle.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.4/Chart.min.js"></script>
  <script>
  	var ctx = document.getElementById("myChart").getContext('2d');
	var myChart = new Chart(ctx, {
	  type: 'pie',
	  data: {
	    labels: [
		    <% languages.forEach(function(lang) { %>
		    	"<%= lang.language %>",
		    <% }) %>
		  ],
	    datasets: [{
	      backgroundColor: [
	      	<% languages.forEach(function(lang) { %>
	      	  "<%= lang.color %>",
	      	<% }) %>
	      ],
	      data: [<%= languages.map(function(lang) { return lang.percent }) %>]
	    }]
	  }
	});
  </script>
</html>

